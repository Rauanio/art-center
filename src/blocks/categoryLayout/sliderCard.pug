mixin sliderCard(images, cls='')
    div(class=`${cls}-slider-card`)
        div(class=`swiper ${cls}-slider`)
            div(class=`swiper-wrapper ${cls}-slider-wrapper`)
                each slide in images
                    div(class=`swiper-slide ${cls}-slider-slide`)
                        img(src=`/src/images/${slide.text ? slide.img : slide}.png`, alt='Slider Image')
                        if slide.text
                            .slider__on-top
                                .slider__date=slide.date
                                .slider__text
                                    p=slide.text
                                .slider__triangle    
                                    svg(width="64", height="64", viewBox="0 0 64 64", fill="none", xmlns="http://www.w3.org/2000/svg")
                                        path(fill-rule="evenodd", clip-rule="evenodd", d="M64 64V0H0V1.58502C13.866 6.06967 25.578 12.3519 37.1246 22.6462C50.4547 36.1395 57.3648 48.9377 62.0229 64H64Z", fill="currentColor")
                                .slider__arrow
                                    svg(width="20", height="20", viewBox="0 0 24 24", fill="none", xmlns="http://www.w3.org/2000/svg")
                                        path(fill-rule="evenodd", clip-rule="evenodd", d="M14.4556 18.2996L2 17.9791L2.10449 22L19.2971 22L19.318 21.9789L19.8962 21.3937L20.4883 20.8013L20.8018 20.4947L21.3939 19.9023L21.9721 19.317L21.993 19.2963L22 2.10446L17.9805 2L18.3079 15.0314L18.3218 15.4006L6.21456 3.28926L3.28875 6.20906L15.4239 18.3554L14.4556 18.2996Z", fill="#F7F7F8")
    .swiper-navigation
        button(class=`${cls}-slider-button-prev swiper-button-prev`) 
            svg(width="16", height="12", viewBox="0 0 16 12", fill="none", xmlns="http://www.w3.org/2000/svg")
                   path(fill-rule="evenodd", clip-rule="evenodd", d="M16 6.82171H3.19201L8.40154 11.9721L6.06755 12L0 6.00132L6.07023 0H8.43244L3.19201 5.18094H16V6.82171Z", fill="#3A3943")
                    path(d="M6.06755 12L8.40154 11.9721L3.19201 6.82171H16V5.18094H3.19201L8.43244 0H6.07023L0 6.00132L6.06755 12Z", fill="#3A3943")
        .about-slider-nav Листай
        button(class=`${cls}-slider-button-next swiper-button-next`)
            svg(width="16", height="12", viewBox="0 0 16 12", fill="none", xmlns="http://www.w3.org/2000/svg")
                path(fill-rule="evenodd", clip-rule="evenodd", d="M16 6.82171H3.19201L8.40154 11.9721L6.06755 12L0 6.00132L6.07023 0H8.43244L3.19201 5.18094H16V6.82171Z", fill="#3A3943")
                    path(d="M6.06755 12L8.40154 11.9721L3.19201 6.82171H16V5.18094H3.19201L8.43244 0H6.07023L0 6.00132L6.06755 12Z", fill="#3A3943")
