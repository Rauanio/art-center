  const navItems = [
    {
      name: 'Покупки',
      href: 'purchases.html',
    }, 
    {
      name: 'Родителям и детям',
      href: 'parents.html',
    },
    {
      name: 'Для развлечений',
      href: 'activity.html',
    },
    {
      name: 'Для бизнеса',
      href: 'business.html',
    },
    {
      name: 'Для спорта',
      href: 'sport.html',
    },
    {
      name: 'Услуги',
      href: 'services.html',
    },
    {
      name: 'Гостям Казани',
      href: 'guests.html',
    }
  ]

mixin navMenu(activePage='Покупки')
  .nav__menu
    .nav__menu-wrapper
      each nav in navItems
        a(href=nav.href, class=`nav__menu-item ${activePage === nav.name && 'nav__menu-active'}`)
          if activePage === nav.name
            p=nav.name
          else
            +roller(nav.name, 'nav__menu-roller')   

