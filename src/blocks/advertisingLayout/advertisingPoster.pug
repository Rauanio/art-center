mixin advertisingPoster(img='', title='', desc='')
    .advertising__poster
        .advertising__poster-img
            img(src=`/src/images/${img}.png`, alt="poster")
            .advertising__poster-square
            svg(width="64", height="64", viewBox="0 0 64 64", fill="none", xmlns="http://www.w3.org/2000/svg")
                 path(fill-rule="evenodd", clip-rule="evenodd", d="M64 64V0H0V1.58502C13.866 6.06967 25.578 12.3519 37.1246 22.6462C50.4547 36.1395 57.3648 48.9377 62.0229 64H64Z", fill="currentColor")
        .advertising__poster-text
            .advertising__poster-title=title
            .advertising__poster-desc=desc
     
